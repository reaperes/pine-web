body
  font 14px "Lucida Grande", Helvetica, Arial, sans-serif
  overflow-x hidden
  overflow-y scroll

body.active
  overflow-y hidden

#page-wrap
  position relative
  left 0
  transition all 0.4s cubic-bezier(0.230, 1.000, 0.320, 1.000)

#header-menu
  background white
  opacity 0.8
  position fixed
  width 100%
  top 0
  left 0
  right 0
  display block
  z-index 10
  transition all 0.4s cubic-bezier(0.230, 1.000, 0.320, 1.000)

  #header-container
    padding 16px 60px
    display block

    #bar-left-menu
      position fixed
      display block
      width 26px
      height 21px
      margin-top 14px
      cursor pointer
      overflow hidden

      #bars
        background black
        position relative
        width 100%
        height 0.2em
        display block
        margin-top 9px
        transition all 0.1s ease

      #bars:before, #bars:after
        background black
        width 100%
        height 0.2em
        position absolute
        left 0
        content ''
        transition all 0.2s ease
        /*transform rotate(0deg)*/

      #bars::before
        top -7px

      #bars::after
        top 7px

      #bars.active
        background transparent

      #bars.active:before, #bars.active:after
        top 0

      #bars.active:before
        transform rotate(-45deg)

      #bars.active:after
        transform rotate(45deg)

    #title
      text-align center
      font-size 40px

    #bar-right-menu
      float right
      margin-top -40px
      cursor pointer

#body-container
  margin-left auto
  margin-right auto
  padding-top 80px
  width 1145px

  #thread-container
    float left
    display block
    font-size 0

#config-container
  position relative
  top 80px
  right 60px
  width 120px
  height 200px
  visibility hidden
  overflow hidden

  #config-menus
    position absolute
    top -120px
    font-size 14px
    transition all 0.3s ease

    a
      display block
      background indianred
      opacity .4
      cursor pointer
      float left
      width 100px
      padding 10px

  #config-menus.config-menus-active
    top 0
    visibility visible

#page-wrap.active
  left 200px

#header-menu.active
  left 200px

.thread
  position relative
  background whitesmoke
  width 229px
  height 229px
  display inline-block

  >img
    position absolute
    width 100%
    height 100%
    pointer-events: none
    transition opacity .2s ease-in

  >span
    position absolute
    bottom 0
    padding 0 4px 4px 4px
    width 221px
    font-size 14px
    display block

  .comment-container
    background white
    opacity 1
    position absolute
    width 100%
    top 229px
    visibility hidden
    z-index 0

    .comment
      background lightpink
      padding 4px

      >span
        padding 4px
        font-size 14px

  .comment-container.active
    visibility visible
    z-index 100
